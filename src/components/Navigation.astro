---
import { languages, defaultLang } from '../i18n/ui';
import { useTranslations } from '../i18n/utils';

const t = useTranslations(
  (Astro.currentLocale ?? defaultLang).replace('_', '-') as keyof typeof languages,
);
const lang = Astro.currentLocale === defaultLang ? '' : `/${Astro.currentLocale}`;
---

<nav class="nav-links hidden sm:flex sm:flex-row sm:items-center sm:space-x-4">
  <div class="flex flex-col space-y-2 py-2 sm:py-0 sm:space-y-0 sm:flex-row sm:space-x-4">
    <a href=`${lang}/`>{t('header.home')}</a>
    <a href=`${lang}/blog`>{t('header.blog')}</a>
    <a href=`${lang}/about`>{t('header.about')}</a>
  </div>
</nav>
